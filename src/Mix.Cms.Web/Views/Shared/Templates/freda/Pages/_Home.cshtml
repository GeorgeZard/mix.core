@using Microsoft.AspNetCore.Authorization
@using Mix.Cms.Lib
@using Mix.Cms.Lib.Services
@model Mix.Cms.Lib.ViewModels.MixPages.ReadMvcViewModel
@inject IAuthorizationService AuthorizationService

@await Html.PartialAsync("../Layouts/_Header.cshtml")

<!-- home section -->

<!-- main section -->
<main class="yb-main-content">

    @foreach (var nav in Model.Modules.OrderBy(n => n.Priority))
    {
        var module = nav.Module;
        if (module != null)
        {
            <div id="@module.Name">
                @await Html.PartialAsync(module.TemplatePath, module)
            </div>
        }
    }


</main> <!-- end main section -->
