@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService


@{
    string assetFolder = Mix.Cms.Lib.MixCmsHelper.GetAssetFolder(ViewBag.culture);
    var social = await Mix.Cms.Lib.MixCmsHelper.GetNavigation("social", ViewBag.culture, Url);
    var footer = MixCmsHelper.GetModule("footer", ViewBag.culture);
}

<!-- Footer -->
<div class="footer">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <div class="footer-col">

                    <h4>@footer.Title</h4>
                    <p>
                        @Html.Raw(footer.Description)
                    </p>

                </div>
            </div> <!-- end of col -->
            <div class="col-md-4">
                <div class="footer-col middle">

                    <div class="image-container">

                        <img class="img-fluid" src="@footer.AttributeData.Data.Obj.logo.Value" alt="alternative">
                    </div> <!-- end of image-container -->

                </div>
            </div> <!-- end of col -->
            <div class="col-md-4">
                <div class="footer-col last">
                    <h4>Social</h4>
                    @if (social != null)
                    {
                        foreach (var item in social.MenuItems)
                        {
                            <span class="fa-stack">
                                <a href="@item.Uri" title="@item.Title" target="@item.Target">
                                    <i class="fas fa-circle fa-stack-2x"></i>
                                    <i class="@item.Classes"></i>
                                </a>
                            </span>
                        }
                    }


                </div>
            </div> <!-- end of col -->
        </div> <!-- end of row -->
    </div> <!-- end of container -->
</div> <!-- end of footer -->
<!-- end of footer -->
<!-- Copyright -->
<div class="copyright">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <p class="p-small">Copyright @DateTime.Now.Year <a href="https://www.ninepos.com">@(Mix.Cms.Lib.Services.MixService.GetConfig<string>("SiteName", ViewBag.culture))</a> - All rights reserved</p>
            </div> <!-- end of col -->
        </div> <!-- enf of row -->
    </div> <!-- end of container -->
</div> <!-- end of copyright -->
<!-- end of copyright -->
