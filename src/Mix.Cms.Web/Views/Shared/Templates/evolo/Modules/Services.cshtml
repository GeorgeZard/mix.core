@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService
@model Mix.Cms.Lib.ViewModels.MixModules.ReadMvcViewModel

@{
    string culture = ViewBag.culture;
    var topServs = await Mix.Cms.Lib.MixCmsHelper.GetNavigation("services", ViewBag.culture, Url);
    var services = Mix.Cms.Lib.MixCmsHelper.GetModule("services", ViewBag.culture);

    string assetFolder = Mix.Cms.Lib.MixCmsHelper.GetAssetFolder(ViewBag.culture);
}

<!-- Services -->
<div id="services" class="cards-1">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>@services.Title</h2>
                <p class="p-heading p-large">@services.AttributeData.Data.Obj.description.Value</p>
            </div> <!-- end of col -->
        </div> <!-- end of row -->
        <div class="row">
            <div class="col-lg-12">
                @if (topServs != null)
                {
                    foreach (var item in topServs.MenuItems)
                    {

                        <div class="card" style="min-width: 21rem;min-height:21rem;">
                            <img class="card-image" style="width:100%;height:100%;" src="@item.Icon" alt="alternative">
                            <div class="card-body">
                                <h4 class="card-title">@item.Title</h4>
                                <p>@item.Description</p>
                            </div>
                        </div>



                    }
                }

                <!-- Card -->
                <!-- end of card -->

            </div> <!-- end of col -->
        </div> <!-- end of row -->
    </div> <!-- end of container -->
</div> <!-- end of cards-1 -->
<!-- end of services -->
